FROM centos:7
MAINTAINER sanadshamoon92@gmail.com

# 1. Fix Repos
RUN sed -i 's/mirrorlist/#mirrorlist/g' /etc/yum.repos.d/CentOS-*
RUN sed -i 's|#baseurl=http://mirror.centos.org|baseurl=http://vault.centos.org|g' /etc/yum.repos.d/CentOS-*

# 2. Install Packages (Removed zip/unzip, kept PHP)
RUN yum install -y httpd php php-mysql

# 3. Copy the folder directly
# This command copies the CONTENTS of your local "Website" folder 
# directly into "/var/www/html/" inside the container.
COPY Website/ /var/www/html/

WORKDIR /var/www/html/

# 4. Permissions (Optional but recommended for PHP)
# Ensures Apache owns the files
RUN chown -R apache:apache /var/www/html/

# 5. Start Apache
CMD ["/usr/sbin/httpd", "-D", "FOREGROUND"]
EXPOSE 80